{"components/category/sidebar-categories":"{{#if categories }}\n    <div id=\"acc-category\">\n        <div class=\"accordion-block\">\n            <div class=\"accordion-nav-clear-holder d-flex justify-content-between\">\n                <div class=\"accordion-title\">\n                    <span class=\"font-weight-bold\">Category</span>\n                    <i class=\"fal fa-plus\"></i>\n                </div>\n            </div>\n\n            <div id=\"facetedSearch-content--brand\" class=\"accordion-content \">\n\n                <ul class=\"nav flex-column m-0 p-0\">\n                    {{#each categories}}\n                    <li class=\"nav-item root\">\n                        {{#if children}}\n                        <a class=\"navList-action--checkbox nav-link{{#if is_active}} active{{else}} collapsed{{/if}} d-flex align-items-start\" href=\"#navCategory-{{id}}\" data-toggle=\"collapse\">\n                            <span class=\"pr-3\">{{name}}</span> \n                            <!-- <i class=\"fal fa-chevron-down ml-auto\" aria-hidden=\"true\"></i> -->\n                            <i class=\"fal fa-plus ml-auto\"></i>\n                        </a>\n                        <div class=\"collapse{{#if is_active}} show{{/if}}\" id=\"navCategory-{{id}}\" aria-hidden=\"true\" tabindex=\"-1\">\n                            <ul class=\"nav flex-column m-0 px-2\">\n                                <li class=\"nav-item\">\n                                    <a class=\"nav-link navList-action--checkbox \" href=\"{{url}}\">{{lang 'category.view_all.name' category=name}}</a>\n                                </li>\n                                {{#each children}}\n                                <li class=\"nav-item{{#if is_active}} active{{/if}}\">\n                                    {{#if children}}\n                                    <a class=\"navList-action--checkbox  nav-link{{#if is_active}} active{{else}} collapsed{{/if}} d-flex align-items-start\" href=\"#navCategory-{{id}}\" data-toggle=\"collapse\">\n                                        <span class=\"pr-3\">{{name}}</span>\n                                        <!-- <i class=\"fal fa-chevron-down ml-auto\" aria-hidden=\"true\"></i>  -->\n                                        <i class=\"fal fa-plus ml-auto\"></i>\n                                    </a>\n                                    <ul class=\"px-2 nav collapse{{#if is_active}} show{{/if}}\" id=\"navCategory-{{id}}\">\n                                        {{#each children}}\n                                        <li class=\"nav-item\">\n                                            <a class=\"navList-action--checkbox nav-link{{#if is_active}} active{{/if}}\" href=\"{{url}}\">{{name}}</a>\n                                        </li>\n                                        {{/each}}\n                                    </ul>\n                                    {{else}}\n                                    <a class=\" navList-action--checkbox nav-link{{#if is_active}} active{{/if}}\" href=\"{{url}}\">{{name}}</a>\n                                    {{/if}}\n                                </li>\n                                {{/each}}\n                            </ul>\n                        </div>\n                        {{else}}\n                        <a class=\"navList-action--checkbox nav-link{{#if is_active}} active{{/if}}\" href=\"{{url}}\">{{name}}</a>\n                        {{/if}}\n                    </li>\n                    {{/each}}\n                </ul>\n\n            </div>\n        </div>        \n    </div>\n{{/if}}\n"}
