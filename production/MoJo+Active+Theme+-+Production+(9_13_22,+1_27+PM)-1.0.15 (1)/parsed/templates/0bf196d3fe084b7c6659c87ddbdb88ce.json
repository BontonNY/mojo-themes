{"components/common/wishlist-dropdown":"<!-- <form action=\"{{product.add_to_wishlist_url}}\" class=\"form form-wishlist form-action position-relative\" data-wishlist-add method=\"post\">\r\n    <button class=\"btn btn-outline-primary w-60 h-60 br-100\" type=\"submit\" value=\"{{lang 'account.wishlists.add_to_default'}}\">\r\n        <span class=\"d-none\">{{lang 'account.wishlists.wishlist'}}</span><i aria-hidden=\"true\" class=\" fal fa-heart\"></i>\r\n    </button>\r\n</form> -->\r\n\r\n\r\n<form action=\"{{product.add_to_wishlist_url}}\" class=\"form form-wishlist form-action\" data-wishlist-add method=\"post\">\r\n\r\n    \r\n\r\n    <a aria-controls=\"wishlist-dropdown\"\r\n       aria-expanded=\"false\"\r\n       class=\"button dropdown-menu-button btn btn-outline-primary w-60 h-60 br-100\"\r\n       data-dropdown=\"wishlist-dropdown\"\r\n       href=\"#\"\r\n    >\r\n        \r\n        <span class=\"d-none\">{{lang 'account.wishlists.add_item'}}</span>\r\n        <i aria-hidden=\"true\" class=\" fal fa-heart\"></i>\r\n        \r\n    </a>\r\n    <ul aria-hidden=\"true\" class=\"dropdown-menu\" data-dropdown-content id=\"wishlist-dropdown\">\r\n        <li  class=\"label\">\r\n            <label>Add To Wish List: </label>\r\n        </li>\r\n\r\n        {{#if customer.wishlists}}\r\n            {{#each customer.wishlists}}\r\n                <li>\r\n                    <input class=\"button no-btn {{#if this.num_items '!==' '0'}}button--has-items{{/if}}\"\r\n                           formaction=\"{{this.add_url}}&product_id={{../product.id}}\"\r\n                           type=\"submit\"\r\n                           value=\"{{this.name}}\"\r\n                    >\r\n                </li>\r\n            {{/each}}\r\n        {{else}}\r\n        <li>\r\n            <input class=\"no-btn\" type=\"submit\" value=\"{{lang 'account.wishlists.add_to_default'}}\">\r\n        </li>\r\n        {{/if}}\r\n        <li class=\"create-new\">\r\n            <a data-wishlist class=\"button\" href=\"/wishlist.php?action=addwishlist&product_id={{product.id}}\">\r\n                <i class=\"fal fa-plus-circle\"></i>\r\n                {{lang 'account.wishlists.create_new'}}\r\n            </a>\r\n        </li>\r\n    </ul>\r\n</form>\r\n"}
